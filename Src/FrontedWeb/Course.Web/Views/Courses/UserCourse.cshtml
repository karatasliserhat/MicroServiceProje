@model List<CourseViewModel>
@{
    ViewData["Title"] = "UserCourse";

    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslarım</h5>

                <a asp-controller="Courses" asp-action="Create" class="btn btn-info btn-sm">Kurs Oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs İsim</th>
                                <th>Kategori</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td><img src="@item.StockPhotoUrl" width="75" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Category.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td><a asp-action="Update" asp-controller="Courses" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>|<a asp-action="Delete" asp-controller="Courses" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Adınıza Kayıtlı Kurs Bulunamadı..
                    </div>

                }




            </div>
        </div>
    </div>
</div>
