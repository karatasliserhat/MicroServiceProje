@{
    ViewData["Title"] = "Home Page";
    int count = 0;

}
<h2>Kurslar</h2>
<hr />
@model List<CourseViewModel>

@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
        }
        <div class="col">
            <div class="card">
                <img src="@item.StockPhotoUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <span class="badge text-bg-primary">@item.Category.Name</span>
                    <h5 class="text-primary">@item.Price TL</h5>
                    <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-success">Detay</a>
                </div>
            </div>
        </div>
        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }

}